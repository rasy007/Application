<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bar"
>
    <ImageButton 
     android:layout_width="37sp"
    android:layout_height="40sp"
    android:background="@drawable/back_button"
    android:id="@+id/musiclist_back"
    android:layout_centerVertical="true"
    android:layout_marginLeft="6sp"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音乐列表"
        android:layout_centerVertical="true"
        android:id="@+id/titlename"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_toRightOf="@id/musiclist_back"
        />
    <ImageButton 
    android:layout_width="47sp"
    android:layout_height="32sp"
    android:id="@+id/musiclist_play"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/play_button"
    android:layout_marginRight="3sp"
        />
</RelativeLayout><!-- From: file:/E:/GitHub/Application2/小米音乐/src/main/res/layout/title_bar.xml -->